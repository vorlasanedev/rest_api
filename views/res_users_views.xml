<odoo>
    <record id="view_users_form_inherit_api_key" model="ir.ui.view">
        <field name="name">res.users.form.inherit.api.key</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="API Access" name="api_access">
                    <group>
                        <group string="Authentication Details">
                            <label for="rest_api_key"/>
                            <div class="o_row">
                            <!-- disable copy and show api key -->
                             <field name="rest_api_key" readonly="1" password="True"/>
                            <!-- end disable copy and show api key -->

                            <!-- enable copy and show api key -->
                                <!-- <field name="rest_api_key" readonly="1" widget="copy_clipboard" password="True" invisible="show_rest_api_key"/>
                                <field name="rest_api_key" readonly="1" widget="copy_clipboard" invisible="not show_rest_api_key"/>
                                <field name="show_rest_api_key" invisible="1"/>
                                <button name="toggle_api_key" type="object" icon="fa-eye" invisible="show_rest_api_key" class="btn btn-link py-0"/>
                                <button name="toggle_api_key" type="object" icon="fa-eye-slash" invisible="not show_rest_api_key" class="btn btn-link py-0"/> -->
                            <!-- end enable copy and show api key -->
                            
                            </div>
                            <button name="action_generate_api_key" 
                                    type="object" 
                                    string="Generate New API Key" 
                                    class="btn-primary"
                                    confirm="Are you sure? Any old key for this user will stop working."/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" style="margin-top: 20px;">
                        <strong>Quick Start Guide:</strong><br/>
                        1. Generate your API Key above.<br/>
                        2. Use <code>POST /api/login</code> with your login/password to retrieve it via API.<br/>
                        3. Call REST endpoints using header: <code>X-API-Key: YOUR_KEY</code><br/>
                        Example: <code>GET /api/v1/res.partner</code>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
